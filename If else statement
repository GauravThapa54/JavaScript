let raceNumber = Math.floor(Math.random() * 1000); //picking up a random number for racenumber

let early = false; //do not put quotation mark '' in Boolean field
let runnerAge = 30;

if (early && runnerAge > 18) {
  raceNumber += 1000;
}
if (early && runnerAge > 18){
  console.log(`the race will begin at 09:30, your race number is ${raceNumber}`);
} else if(!early && runnerAge > 18){
  console.log(`the race will begin at 11:00, your race number is ${raceNumber}`);
} else if(runnerAge < 18){
  console.log(`the race will begin at 12:30 pm, your race number is ${raceNumber}`);
} else {
  console.log(`please go to the registration desk!`);
}
